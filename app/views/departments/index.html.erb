<h1>Click a Department To View Content</h1>

<%= link_to 'Create a new department', new_department_path %>

<ul>
<% @departments.each do |department| %>
  <li>  
  <%= department.name %>
  <%= link_to 'Create a new department', new_department_path %>
  <%= link_to "Delete", department, method: :delete %>
  <%= link_to "edit", department_path(department) %>
  <% end %>
</ul>